h2{
    display: block;
    padding: 0;
    margin-bottom: 20px;
    font-size: 26px;
    line-height: inherit;
    text-align: center;
    color: #333;
    border: 0;
    border-bottom: 1px solid #e5e5e5;
    padding: 10px 0;
    margin-right: 15px;
    margin-left: 15px;
}
.form-group {
    margin-bottom: 0;
    padding: 10px 0;
}
.paytogame .controll-label {
    display: block;
    max-width: 100%;
    margin-bottom: 15px;
    font-weight: 700;
}
.paytogame input.form-control, .paytogame .controll-label
{
    width: 100%;
}
.paytogame label span
{
    font-weight: unset;
}
.form-control {
    display: block;
    width: 100%;
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 2px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
    -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
}
.form-control {
    -webkit-box-shadow: none;
    box-shadow: none;
    border-width: 1px;
    min-height: 35px;
    height: auto;
}
.btn {
    width: 100px;
    height: 40px;
    padding: 10px 16px;
    border-radius: 3px;
    min-width: 80px;
    color: #fff;
    background-color: #337ab7;
    border-color: #2e6da4;
    margin: 15px;
}

.btn:hover {
    background-color: #006cca;
    border-color: #006cca;
}
.hd-Form {
    padding: 15px 15px;
    font-size: 18px;
    font-weight: bold;
    display: block;
}
.check
{
    opacity:0.2;
	color:#996;
}
.check::before
{
    content: '';
}
.box{
    margin-bottom:5px;
    cursor: pointer;
}
.panel-title>a {
    text-decoration: none;
    color: #333;
    font-size: 16px;
    display: block;
}
.panel h3 {
    font-size: 16px;
    text-align: center;
    color: red;
    font-weight: bold;
    display: block;
}
i.fa.fa-spinner.fa-spin {
    margin: 0px 15px;
    font-size: 22px;
}
.box {
    width: 100%;
    float: unset;
}
.hd-Form {
    padding-left: 0;
}
#list_server{
    padding-left:0;
}
.message-alert {
    margin-top: 12px;
    color: #F44336;
    font-size: 14px;
    padding: 0 5px;
    font-weight: 600;
    font-family: 'Roboto', sans-serif;
}
.paytogame_container .row
{
    margin-right: unset;
    margin-left: unset;
}
.input-error
{
    color:red;
    font-size: 12px;
    margin-left: 10px;
}
.paytogame_container #list_server
{
    width: auto;
}

.paytogame_container .message-alert {
    color: #F44336;
    font-size: 14px;
    padding: 0 5px;
    font-weight: 600;
    font-family: 'Roboto', sans-serif;
}
.paytogame_container .message-success {
    color: #4B8B3B;
    font-size: 14px;
    padding: 0 5px;
    font-weight: 600;
    font-family: 'Roboto', sans-serif;
}

.dot-loader div
{
    width: 1.4rem;
    height: 1.4rem;
    background: #fff;
    border-radius: 50%;
    display: inline-block;
    animation: slideDotLoader 1s infinite;
}
.dot-loader div:nth-child(1){ animation-delay: .1s; }
.dot-loader div:nth-child(2){ animation-delay: .2s; }
.dot-loader div:nth-child(3){ animation-delay: .3s; }
.dot-loader div:nth-child(4){ animation-delay: .4s; }
.dot-loader div:nth-child(5){ animation-delay: .5s; }
@keyframes slideDotLoader {
    0% { transform: scale(1); }
    50% { opacity: .3; transform: scale(2); }
    100% { transform: scale(1); }
}
.paytogamehistory .table tr{
    color: black!important;
}
#submitCard{
    margin-top: 0px!important;
}